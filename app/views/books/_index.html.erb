<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t "books.picture" %></th>
      <th><%= t "books.name" %></th>
      <th><%= t "books.price" %></th>
      <th><%= t "books.status" %></th>
      <th><%= t "books.category" %></th>
      <th><%= t "books.publisher" %></th>
      <th><%= t "books.author" %></th>
      <th colspan="3"><%= t "books.option" %></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to image_tag(book.picture), book %></td>
        <td><%= book.name %></td>
        <td><%= book.price %> vnd</td>
        <td>
          <% if book.status %>
            Con hang
          <% end %>
        </td>
        <td><%= book.category.name %></td>
        <td><%= book.publisher.name %></td>
        <td>
            <% @join_book_author.where(book_id: book.id).each do |j| %>
                <%= j.author.name %> <br/>
            <% end %>
        </td>
        <td><%= link_to image_tag("show.png"), book, class: "option" %></td>
        <td><%= link_to image_tag("edit.png"), edit_book_path(book), class: "option" %></td>
        <td><%= link_to image_tag("delete.png"), book, class: "option",
        method: :delete, data: {confirm: t("users.confirm_delete")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books, theme: "twitter-bootstrap-3" %>
<br>
