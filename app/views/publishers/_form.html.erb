<%= form_with(model: publisher, local: true) do |form| %>
  <% if publisher.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
       <%= t("users.form.error_messages") %>
          <%= @publisher.errors.count %> <%= t("users.form.error") %>.
      </div>
      <ul>
        <% @publisher.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :publisher_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
