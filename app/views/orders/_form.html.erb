<%= form_with(model: order, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
      <% if order.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
           <%= t("users.form.error_messages") %>
              <%= @order.errors.count %> <%= t("users.form.error") %>.
          </div>
          <ul>
            <% @order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.hidden_field :user_id, value: current_user.id %>
      </div>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :order_name %>
      </div>

      <div class="field">
        <%= form.label :phone %>
        <%= form.text_field :phone, id: :order_phone %>
      </div>

      <div class="field">
        <%= form.label :address %>
        <%= form.text_area :address, id: :order_address %>
      </div>

      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, id: :order_email %>
      </div>

      <div class="field">
        <%= form.hidden_field :all_product, value: session[:all_product] %>
        <%= form.hidden_field :all_price, value: session[:all_price] %>
      </div>

      <div class="actions">
        <%= form.submit t("orders.checkout"), class: "btn btn-primary" %>
        <%= link_to t("users.back"), :back, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
