<p id="notice"><%= notice %></p>

<h1><%= t "orders.list_order" %></h1>

<table class="table table-hover" style="text-align: center;" >
  <thead>
    <tr>
      <th><%= t "orders.code_order" %></th>
      <th><%= t "users.name" %></th>
      <th><%= t "users.phone" %></th>
      <th><%= t "users.address" %></th>
      <th><%= t "users.email" %></th>
      <th><%= t "orders.product" %></th>
      <th><%= t "orders.amount" %></th>
      <th><%= t "orders.date" %></th>
      <th colspan="3"><%= t "users.option" %></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td>
          <% @join_book_order.where(order_id: order.id).each do |j| %>
            <%= j.amount %> x <%= j.book.name %> <br/>
          <% end %>
        </td>
        <td><%= order.all_product %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to image_tag("show.png"), order,
            class: "option" %></td>
          <td><%= link_to image_tag("edit.png"), edit_order_path(order),
            class: "option" %></td>
          <td><%= link_to image_tag("delete.png"), order,
            class: "option",
          method: :delete, data: {confirm: t("users.confirm_delete")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders, theme: "twitter-bootstrap-3" %>
<br>
