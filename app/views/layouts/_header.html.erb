<header class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand"> <%= link_to image_tag("logo.png"), root_path,
        {class: "img"} %>
      </div>
    </div>
    <ul class="nav navbar-right navbar-nav">
      <li><%= link_to t(".about"), "#" %></li>
      <li><%= link_to t(".contact"), "#" %></li>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.manage" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.users"), admin_users_path %></li>
              <li><%= link_to t("layouts.header.books"), books_path %></li>
              <li><%= link_to t("layouts.header.order"), orders_path %></li>
            </ul>
          </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.name %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), admin_user_path(current_user.id) %></li>
            <li class="divider"></li>
            <li>
              <li><%= link_to t(".log_out"), destroy_user_session_path, method: :delete %></li>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".signin"), new_user_session_path %></li>
        <li><%= link_to t(".register"), new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</header>
